{
  "name": "@vivat/nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json}\"",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@clerk/nextjs": "^4.26.1",
    "@t3-oss/env-nextjs": "^0.7.1",
    "@tanstack/react-query": "^5.0.5",
    "@tanstack/react-query-devtools": "^5.4.2",
    "@tanstack/react-query-next-experimental": "5.0.5",
    "@trpc/client": "next",
    "@trpc/next": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "@vivat/api": "^0.1.0",
    "@vivat/db": "^0.1.0",
    "@vivat/tailwind-config": "^0.1.0",
    "next": "^13.5.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "superjson": "1.13.1",
    "svix": "^1.13.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/node": "^18.18.7",
    "@types/react": "^18.2.33",
    "@types/react-dom": "^18.2.14",
    "@vivat/eslint-config": "^0.2.0",
    "@vivat/prettier-config": "^0.1.0",
    "@vivat/tsconfig": "^0.1.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "tailwindcss": "3.3.2",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@vivat/eslint-config/base",
      "@vivat/eslint-config/nextjs",
      "@vivat/eslint-config/react"
    ]
  },
  "prettier": "@vivat/prettier-config"
}